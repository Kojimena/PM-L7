<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <TextView
        android:id="@+id/goodmorning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cicular"
        android:text="¡Buenos días!"
        android:textColor="@color/black"
        android:textSize="@dimen/titlemax"
        app:layout_constraintBottom_toTopOf="@+id/actualizacion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/actualizacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTopmin"
        android:text="Hola correo, necesitamos que actualices tu perfil!"
        android:textColor="@color/gris"
        app:layout_constraintStart_toStartOf="@+id/goodmorning"
        app:layout_constraintBottom_toTopOf="@id/actualizarperfil"
        app:layout_constraintEnd_toEndOf="@id/goodmorning"
        app:layout_constraintTop_toBottomOf="@+id/goodmorning" />

    <Button
        android:id="@+id/actualizarperfil"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/marginTopmin"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Actualizar perfil"
        android:backgroundTint="@color/naranja"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/actualizacion"
        app:layout_constraintStart_toStartOf="@+id/actualizacion"
        app:layout_constraintTop_toBottomOf="@+id/actualizacion" />

</androidx.constraintlayout.widget.ConstraintLayout>